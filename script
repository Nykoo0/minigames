      <!-- 9 buttons generated by JS -->
    </div>
    <div id="tictactoe-status"></div>
    <button id="tictactoe-reset" style="margin-top:1rem; padding:0.5rem 1rem; cursor:pointer;">Reset</button>
  </section>

  <!-- Counting Game -->
  <section id="game-counting" class="hidden">
