<main>
  <!-- HowGay Game -->
  <section id="game-howgay">
    <h2>HowGay</h2>
    <p>Click the button to see how gay you are!</p>
    <button id="howgay-btn">Check!</button>
    <p id="howgay-result" style="font-size:2rem; margin-top:1rem;"></p>
  </section>

  <!-- TicTacToe Game -->
  <section id="game-tictactoe" class="hidden">
    <h2>Tic Tac Toe</h2>
